# You can use one of following values:
#   "rgba", "abgr", "argb", "bgra"

ini_set("force_colorspace","rgba");

##
# Initializing Information
#

ini_set("rom_name",             "HydraRom™ ");
ini_set("rom_version",          "V1.2");
ini_set("rom_author",           "Tkkg1994");
