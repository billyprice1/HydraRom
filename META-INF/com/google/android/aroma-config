##
# INSTALLATION PROCESS
#

if prop("menu.prop","selected")== "1" 
then

ini_set("text_next", "Next");
ini_set("icon_next", "@next");

install(
  "HydraRom™ Installation",
  getvar("rom_name") + "\n" +
  "Please wait while HydraRom is conquering your Note 7" +
  "",
  "icons/install"
);

